{
  "info": {
    "title": "API de Servicio de Citas",
    "version": "1.0.0",
    "description": "API para gestionar citas"
  },
  "servers": [
    {
      "url": " https://xxxxx.us-east-1.amazonaws.com/dev",
      "description": "Servidor de desarrollo local"
    }
  ],
  "openapi": "3.0.0",
  "components": {
    "schemas": {
      "AppointmentCreate": {
        "type": "object",
        "properties": {
          "insuredId": {
            "type": "string",
            "minLength": 5,
            "maxLength": 5,
            "pattern": "^\\d{5}$",
            "description": "Código de asegurado"
          },
          "scheduleId": {
            "type": "number",
            "minimum": 0
          },
          "countryISO": {
            "type": "string",
            "enum": [
              "PE",
              "CL"
            ]
          }
        },
        "required": [
          "insuredId",
          "scheduleId",
          "countryISO"
        ],
        "description": "Esquema para crear una nueva cita"
      },
      "AppointmentComplete": {
        "type": "object",
        "properties": {
          "insuredId": {
            "type": "string",
            "minLength": 5,
            "maxLength": 5,
            "pattern": "^\\d{5}$",
            "description": "Código de asegurado"
          },
          "scheduleId": {
            "type": "number",
            "minimum": 0
          }
        },
        "required": [
          "insuredId",
          "scheduleId"
        ],
        "description": "Esquema para completar una cita"
      },
      "AppointmentResponse": {
        "type": "object",
        "properties": {
          "insuredId": {
            "type": "string"
          },
          "scheduleId": {
            "type": "number"
          },
          "countryISO": {
            "type": "string"
          },
          "createdAt": {
            "type": "string"
          }
        },
        "required": [
          "insuredId",
          "scheduleId",
          "countryISO"
        ],
        "description": "Esquema para respuesta de cita"
      },
      "AppointmentListResponse": {
        "type": "array",
        "items": {
          "$ref": "#/components/schemas/AppointmentResponse"
        },
        "description": "Esquema para respuesta de lista de citas"
      },
      "ErrorResponse": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string"
          }
        },
        "required": [
          "message"
        ],
        "description": "Esquema para respuesta de error"
      }
    },
    "parameters": {}
  },
  "paths": {
    "/appointments": {
      "post": {
        "summary": "Crear una nueva cita",
        "description": "Endpoint para crear una nueva cita para una persona asegurada",
        "tags": [
          "Citas"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AppointmentCreate"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "La cita creada",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AppointmentResponse"
                }
              }
            }
          }
        }
      }
    },
    "/ensureds/{ensuredId}/appointments": {
      "get": {
        "summary": "Obtener citas por ID del asegurado",
        "description": "Recuperar todas las citas para una persona asegurada específica",
        "tags": [
          "Citas"
        ],
        "parameters": [
          {
            "schema": {
              "type": "string"
            },
            "required": true,
            "name": "insuredId",
            "in": "path"
          }
        ],
        "responses": {
          "200": {
            "description": "Lista de citas para la persona asegurada",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AppointmentListResponse"
                }
              }
            }
          }
        }
      }
    }
  }
}